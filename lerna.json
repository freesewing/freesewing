{
  "version": "3.0.0-alpha.8",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "release: Publish %s"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "packages": ["designs/*", "packages/*", "plugins/*", "sites/*"],
  "useWorkspaces": true
}
